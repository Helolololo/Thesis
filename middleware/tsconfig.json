{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*",
    "src/modules"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}